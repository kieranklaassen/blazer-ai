# Blazer AI Configuration
# Provider: <%= @provider %>
# Docs: https://github.com/kieranklaassen/blazer-ai
<%- unless @existing_ruby_llm -%>

# API key configuration
RubyLLM.configure do |config|
<%- case @provider -%>
<%- when "openai" -%>
  config.openai_api_key = ENV["<%= @env_var %>"]
<%- when "anthropic" -%>
  config.anthropic_api_key = ENV["<%= @env_var %>"]
<%- when "google" -%>
  config.gemini_api_key = ENV["<%= @env_var %>"]
<%- end -%>
end
<%- end -%>

Blazer::Ai.configure do |config|
  config.default_model = "<%= @model %>"
  # config.temperature = 0.2
  # config.rate_limit_per_minute = 20
  # config.schema_cache_ttl = 12.hours
end
